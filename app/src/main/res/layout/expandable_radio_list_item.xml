<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:layout_width="@dimen/drawer_icon_size"
        android:layout_height="@dimen/drawer_icon_size"
        android:id="@+id/radio_list_item_image"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:layout_width="@dimen/drawer_icon_size"
        android:layout_height="@dimen/drawer_icon_size"
        android:id="@+id/radio_list_item_type"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/radio_list_item_text"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/radio_list_item_image"
        android:layout_toRightOf="@id/radio_list_item_image"
        android:layout_toLeftOf="@id/radio_list_item_type"
        android:layout_toStartOf="@id/radio_list_item_type" />

</RelativeLayout>